<% layout('layouts/boilerplate.ejs') -%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login for Wonderlust</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                    <div class="invalid-feedback">username is required and should be descriptive.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="Password" id="password" name="password" class="form-control" required>
                    <div class="invalid-feedback">password is required and should be descriptive.</div>
                </div>
                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>