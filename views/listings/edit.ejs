<% layout('layouts/boilerplate.ejs') -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit this Listing</h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="listings[title]" value="<%=listing.title%>" class="form-control"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Title is required and should be descriptive.</div>
                </div>


                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" id="description" name="listings[description]" class="form-control" required>
                            <%=listing.description%></textarea>
                    <div class="valid-feedback">Nice! A detailed description helps customers.</div>
                    <div class="invalid-feedback">Please provide a short but meaningful description.</div>
                </div>

                <!-- <div class="mb-3">
                    Oringal Listing Image <br>
                     <img src=" >
                </div> -->
                 <!-- Updated Image Display -->
            <div class="mb-3">
                <label class="form-label">Original Listing Image</label>
                <div class="d-flex justify-content-center">
                    <img src="<%=orignalimg%>" class="img-fluid rounded shadow-sm border" style="max-width: 100%; height: auto; max-height: 300px; object-fit: contain;">
                </div>
            </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload new Image</label>
                    <input type="file" id="image" name="listings[image]" class="form-control" >
                    <div class="valid-feedback">Image link looks valid!</div>
                    <div class="invalid-feedback">Please enter a valid image URL.</div>
                </div>


                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="price" class="form-label"> Price</label>
                        <input type="number" id="price" name="listings[price]" value="<%=listing.price%>"
                            class="form-control" required>
                        <div class="valid-feedback">Price added successfully!</div>
                        <div class="invalid-feedback">Price is required and should be a positive number.</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" name="listings[country]" value="<%=listing. country%>"
                            class="form-control" required>
                        <div class="valid-feedback">Great! Country name added.</div>
                        <div class="invalid-feedback">Please enter a valid country name.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label"> Location</label>
                    <input type="text" id="location" name="listings[location]" value="<%=listing.location%>"
                        class="form-control" required>
                    <div class="valid-feedback">Perfect! Location is set.</div>
                    <div class="invalid-feedback">Please enter a valid location.</div>
                </div>


                <button class="btn btn-dark edit-btn">Edit</button>
            </form>
        </div>
    </div>