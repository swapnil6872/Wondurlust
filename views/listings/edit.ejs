<% layout('layouts/boilerplate.ejs') -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit this Listing</h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listings[title]" value="<%=listing.title%>" class="form-control">
                </div>


                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listings[description]" class="form-control">
                <%=listing.description%>
            </textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input type="text" name="listings[image]" value="<%=listing.image%>" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="price" class="form-label"> Price</label>
                        <input type="number" name="listings[price]" value="<%=listing.price%>" class="form-control">
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listings[country]" value="<%=listing. country%>" class="form-control">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label"> Location</label>
                    <input type="text" name="listings[location]" value="<%=listing.location%>" class="form-control">
                </div>


                <button class="btn btn-dark edit-btn">Edit</button>
            </form>
        </div>
    </div>